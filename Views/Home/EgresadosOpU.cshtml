<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <title>Universidades - Opiniones</title>
</head>

<body class="FONDO2">
    <header class="header-masinfo">

        <div class="btn-hamburguesa" onclick="toggleMenu()">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>

        <div>
            <a href='@Url.Action("Landing", "Home")'><img src="~/Captura de pantalla 2025-11-05 145554.png" alt=""> </a>
        </div>

        <nav class="sidebar" id="sidebar">
            <ul>
                <li><a href='@Url.Action("Landing", "Home")'>Unimatch</a></li>
                <li><a href="#">Social</a></li>
                <li><a href='@Url.Action("SeccionUniEstudiantes", "Home")'>Universidades</a></li>
                <li><a href='@Url.Action("SeccionCarreraEstudiantes", "Home")'>Carreras</a></li>
                <li><a href='@Url.Action("InfoUsuario", "Ingreso")'>Mi perfil</a></li>
                <li><a href='@Url.Action("Logout", "Ingreso")'>Cerrar sesión</a></li>
            </ul>
        </nav>

        <div class="volverBotonsito">
            <button class="btn-back" type="button" id="btn-back" aria-label="Volver" onclick="window.history.back()">
                <img src="~/boton volver bien.png" alt="volverBoton">
            </button>
        </div>
    </header>

    <main>
        <h1 class="titulouniversidades">Universidades</h1>

        <div class="carreras-search">
            <input type="text" id="buscarUniversidad" placeholder="Buscar universidad..." oninput="filtrarUniversidades()" />
        </div>
        
        <section class="fotosuni">
            @foreach (Facultad f in @ViewBag.Universidades)
            {
                <div class="fotosunidiv">
                    <img src='@Url.Content(f.fotoFacultad)' alt="@f.nombre">
                    <div class="universidades-content">
                        <p>@f.nombre</p>
                        <div class="botonesuniversidades">
                            <button><a href="#">Opiniones</a></button>
                        </div>
                    </div>
                </div>
            }
        </section>
    </main>

    <footer class="site-footer">
        <div class="footer-inner container">
            <div class="footer-col footer-links">
                <a href="#">Políticas de privacidad</a>
                <a href="#">Términos y condiciones</a>
                <a href="#">Ayuda</a>
                <p class="copyright">© 2025 UniMatch</p>
            </div>

            <div class="footer-col footer-center">
                <p class="madeby">"Hecho por<br>y para estudiantes"</p>
            </div>

            <div class="footer-col footer-social">
                <p class="redes-title">Redes</p>
                <div class="social-icons">
                    <a href="#" aria-label="Instagram"><img src="~/instagram.jpg" alt="Instagram"></a>
                    <a href="#" aria-label="X"><img src="~/x twitter.png" alt="X"></a>
                    <a href="#" aria-label="WhatsApp"><img src="~/whatsapp.png" alt="WhatsApp"></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js"></script>
</body>

</html>
