    <link rel="stylesheet" href="style.css">
</head>
<body >

    <!-- HEADER CON MENÚ HAMBURGUESA -->
    <header class="header-masinfo">

        <div class="btn-hamburguesa" onclick="toggleMenu()">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>

            <nav class="sidebar" id="sidebar">
            </div>

            <ul>
                <li><a href="$">Unimatch</a></li>
                <li><a href="#">Social</a></li>
                <li><a href="universidades.html">Universidades</a></li>
                <li><a href="InfoCarreras.html">Carreras</a></li>
                <li><a href="profile.html">Mi perfil</a></li>
                <li><a href="#">Cerrar sesión</a></li>
            </ul>
        </nav>


    <div class="volverBotonsito">
        <button class="btn-back" type="button" id="btn-back" aria-label="Volver"><img src="img/boton volver bien.png" alt="volverBoton"></button> 
    </div>
</header>
    </header>

    <main class="masinfo-main">
            
<img src=  '@Url.Action("@ViewBag.fotoCarrera")' alt = ""></img> 
        <div class="container">

            <div class="main-content">
                <div class="info">
                    <h1>@ViewBag.Nombre</h1>
                    <p><strong>Duración promedio:</strong> @ViewBag.Duracion</p>
                    <p><strong>Modalidad:</strong> Presencial o híbrida</p>
                    <p><strong>Cantidad de Materias:</strong> @ViewBag.CantMaterias</p>
                    <hr>
                    <h3>Descripción:</h3>
                    <p>@ViewBag.Descripcion</p>            
                    <div class="universidades">
                        <h3>Universidades:</h3>
                        <ul>
                            <li>Universidad del Cine (FUC)</li>
                            <li>Universidad Nacional de las Artes (UNA)</li>
                            <li>Universidad Torcuato Di Tella</li>
                            <li>Universidad de Buenos Aires (UBA)</li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </main>
    <footer class="site-footer">
        <div class="footer-inner container">
            <div class="footer-col footer-links">
                <a href="#">Políticas de privacidad</a>
                <a href="#">Términos y condiciones</a>
                <a href="#">Ayuda</a>
