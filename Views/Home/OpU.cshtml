<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <title>Opiniones - Universidad</title>
</head>
<body class="FONDO2">
    <header class="header-masinfo">
<div class="btn-hamburguesa" onclick="toggleMenu()">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </div>
        <div>
            <a href='@Url.Action("PaginaDeInicioEstudiante", "Ingreso")'><img src="~/Captura de pantalla 2025-11-05 145554.png" alt="UniMatch Logo"></a>
        </div>
        <nav class="sidebar" id="sidebar">
            <ul>
                <li><a href='@Url.("UniversidadesC&R")'>Universidades</a></li>
                <li><a href='@Url.("ChatsC&R")'>Carreras</a></li>
                <li><a href='@Url.Action("InfoUsuario", "Ingreso")'>Mi perfil</a></li>
                <li><a href='@Url.Action("Logout", "Ingreso")'>Cerrar sesión</a></li>
            </ul>
        </nav>
        <div class="volverBotonsito">
            <button class="btn-back" type="button" id="btn-back" aria-label="Volver" onclick="window.history.back()">
                <img src="~/boton volver bien.png" alt="volverBoton">
            </button>
        </div>
    </header>

    <main class="opinion-detail-container">
        <!-- Banner / Title Section -->
        <div class="opinion-banner">
             <h1 class="opinion-title">@ViewBag.Universidad.nombre</h1>
        </div>
        <!-- Opinions Grid -->
        <div class="opinions-grid">
            @foreach (var opinion in ViewBag.Opiniones)
            {
                <div class="opinion-card-modern">
                    <div class="opinion-card-header">
                        <img src="@Url.Content(!string.IsNullOrEmpty(opinion.fotoPerfil) ? opinion.fotoPerfil : "~/icon-7797704_640.png")" alt="Avatar" class="opinion-avatar">
                        <span class="opinion-username">@opinion.username</span>
                    </div>
                    <div class="opinion-card-body">
                        <p>@opinion.mensaje</p>
                    </div>
                </div>
            }
        </div>
    </main>

    <footer class="site-footer">
        <div class="footer-inner container">
            <div class="footer-col footer-links">
                <a href="#">Políticas de privacidad</a>
                <a href="#">Términos y condiciones</a>
                <a href="#">Ayuda</a>
                <p class="copyright">© 2025 UniMatch</p>
            </div>
            <div class="footer-col footer-center">
                <p class="madeby">"Hecho por<br>y para estudiantes"</p>
            </div>
            <div class="footer-col footer-social">
                <p class="redes-title">Redes</p>
                <div class="social-icons">
                    <a href="#" aria-label="Instagram"><img src="~/img/instagram.jpg" alt="Instagram"></a>
                    <a href="#" aria-label="X"><img src="~/x twitter.png" alt="X"></a>
                    <a href="#" aria-label="WhatsApp"><img src="~/whatsapp.png" alt="WhatsApp"></a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/site.js"></script>
</body>
</html>
