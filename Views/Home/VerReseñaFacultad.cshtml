        <div class="chatuni-nav-buttons">
            <button><a href="universidades.cshtml">Docentes </a> </button>
            <button><a href="universidades.cshtml">Actividades </a> </button>
            <button ><a href="universidades.cshtml">Opiniones</a></button>
        </div>
        <div class="chatuni-cards-container">
@foreach(OpinionFacultad R in @ViewBag.Resenias)
{
    
            <div class="chatuni-opinion-card">
                <div class="chatuni-card-top">
                    <div class="chatuni-avatar">
                    <img src="@R.fotoPerfil"
                    alt="Foto usuario"
                    style="cursor:pointer"
                    onclick = "tomarInformacion(@R.idUsuario)"
                    data-bs-toggle="modal"
                    data-bs-target="#staticBackdrop">
                    </div>
                    <h2 class="chatuni-profile-name">@R.username</h2>
                </div>
                
                <div class="chatuni-opinion-box">
                    <p class="chatuni-opinion-text">
                        @R.mensaje
                        </p>
                </div>

                <div class>
                
                    <button><a href="universidades.cshtml">Respuestas </a> </button>
                    <button><a href="universidades.cshtml">Responder </a> </button>
                </div>
                
                <p class="chatuni-private-text">Escribir por privado</p>
            </div>

}

</div>
