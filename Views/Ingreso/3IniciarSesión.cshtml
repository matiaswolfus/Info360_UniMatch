@{
    ViewData["Title"] = "LogIn";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <title>UniMatch - LogIn</title>
</head>

<body class="FONDO3">
    <header>
        <a href='@Url.Action("Landing", "Home")'>
            <img src='@Url.Content("~/Captura de pantalla 2025-11-05 145554.png")' alt="UniMatch Logo">
        </a>
        <nav>
            <ul>
                <li><a href='@Url.Action("SignUpSeleccion", "Ingreso")'>SignUp</a></li>
                <li><a href='@Url.Action("LogIn", "Ingreso")'>LogIn</a></li>
            </ul>
        </nav>
    </header>
    <main class="Inicio">
        <div class="LogIn">
            <h2 class="LogInH2" style="text-align: center; margin-left: 0;">LogIn</h2>
            @if (ViewBag.Error != null)
            {
                <p style="color: red; margin-left: 35%;">@ViewBag.Error</p>
            }
            <form action='@Url.Action("LogInGuardar", "Ingreso")' method="POST">
                <input type="text" name="UserName" placeholder="Username" />
                <input type="password" name="contrasena" placeholder="Contraseña" />
                <input class="submit" type="submit" value="Login" />
            </form>
            <p>¿No tiene cuenta? <a href='@Url.Action("SignUpSeleccion", "Ingreso")'>SignUp</a>
            </p>
        </div>
    </main>

    <footer class="site-footer">
        <div class="footer-inner container">
            <div class="footer-col footer-links">
                <a href="#">Políticas de privacidad</a>
                <a href="#">Términos y condiciones</a>
                <a href="#">Ayuda</a>
                <p class="copyright">© 2025 UniMatch</p>
            </div>

            <div class="footer-col footer-center">
                <p class="madeby">"Hecho por<br>y para estudiantes"</p>
            </div>

            <div class="footer-col footer-social">
                <p class="redes-title">Redes</p>
                <div class="social-icons">
                    <a href="#" aria-label="Instagram"><img src='@Url.Content("~/instagram.jpg")' alt="Instagram"></a>
                    <a href="#" aria-label="X"><img src='@Url.Content("~/x twitter.png")' alt="X"></a>
                    <a href="#" aria-label="WhatsApp"><img src='@Url.Content("~/whatsapp.png")' alt="WhatsApp"></a>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>
