@{
    ViewData["Title"] = "LogIn";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <title>UniMatch - LogIn</title>
</head>

<body class="login-modern-body">
    <header>
        <a href='@Url.Action("Landing", "Home")'>
            <img src='@Url.Content("~/Captura de pantalla 2025-11-05 145554.png")' alt="UniMatch Logo">
        </a>
        <nav>
            <ul>
                <li><a href='@Url.Action("SignUpSeleccion", "Ingreso")'>SignUp</a></li>
                <li><a href='@Url.Action("LogIn", "Ingreso")'>LogIn</a></li>
            </ul>
        </nav>
    </header>
    <div class="login-modern-container">
       
        <div class="login-circle-left"></div>

        
        <div class="login-circle-right"></div>

      
        <div class="login-modern-form">
            <h1 class="login-modern-title">Login</h1>
            <h2 class="login-modern-subtitle">¡Te damos la bienvenida a UniMatch!</h2>

            @if (ViewBag.Error != null)
            {
                <p class="login-error-message">@ViewBag.Error</p>
            }

            <form action='@Url.Action("LogInGuardar", "Ingreso")' method="POST">
                <input type="text" name="UserName" placeholder="Nombre" class="login-modern-input" required />
                <input type="password" name="contrasena" placeholder="Contraseña" class="login-modern-input" required />
                <button type="submit" class="login-modern-button">Continuar</button>
            </form>

            <p class="login-modern-signup">
                ¿No tiene cuenta? <a href='@Url.Action("SignUpSeleccion", "Ingreso")'>Sign Up</a>
            </p>
        </div>
    </div>
    <footer class="site-footer">
        <div class="footer-inner container">
            <div class="footer-col footer-links">
                <a href="#">Políticas de privacidad</a>
                <a href="#">Términos y condiciones</a>
                <a href="#">Ayuda</a>
                <p class="copyright">© 2025 UniMatch</p>
            </div>

            <div class="footer-col footer-center">
                <p class="madeby">"Hecho por<br>y para estudiantes"</p>
            </div>

            <div class="footer-col footer-social">
                <p class="redes-title">Redes</p>
                <div class="social-icons">
                    <a href="#" aria-label="Instagram"><img src='@Url.Content("~/instagram.jpg")' alt="Instagram"></a>
                    <a href="#" aria-label="X"><img src='@Url.Content("~/x twitter.png")' alt="X"></a>
                    <a href="#" aria-label="WhatsApp"><img src='@Url.Content("~/whatsapp.png")' alt="WhatsApp"></a>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>