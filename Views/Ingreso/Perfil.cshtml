<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil • Unimatch</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body class="FONDO2">
    <header class="header-masinfo">
        <div>
            <a href='@Url.Action("PaginaDeInicioEstudiante", "Ingreso")'><img src="~/Captura de pantalla 2025-11-05 145554.png"
                    alt="UniMatch Logo"> </a>
        </div>

        <div class="volverBotonsito">
            <button class="btn-back" type="button" id="btn-back" aria-label="Volver" onclick="window.history.back()">
                <img src="~/boton volver bien.png" alt="volverBoton">
            </button>
        </div>
    </header>
    
    <main class="profile-main">
        <!-- Hero Section con foto -->
        <section class="profile-hero">
            <div class="profile-photo-wrapper">
                <img src="@Url.Content(!string.IsNullOrEmpty(ViewBag.Usuario.fotoPerfil) ? ViewBag.Usuario.fotoPerfil : "~/icon-7797704_640.png")" 
                     alt="Foto de perfil de @ViewBag.Usuario.nombre" 
                     class="profile-photo">
            </div>
            <div class="profile-intro">
                <h1 class="profile-name">@ViewBag.Usuario.nombre</h1>
                <p class="profile-greeting">Bienvenido a tu perfil en Unimatch</p>
            </div>
        </section>

        <!-- Info Cards Section -->
        <section class="profile-cards-container">
            <div class="profile-card">
                <div class="card-label">Nombre</div>
                <div class="card-value">@ViewBag.Usuario.nombre</div>
            </div>

            <div class="profile-card">
                <div class="card-label">Apellido</div>
                <div class="card-value">@ViewBag.Usuario.apellido</div>
            </div>

            <div class="profile-card">
                <div class="card-label">Correo</div>
                <div class="card-value card-email">@ViewBag.Usuario.gmail</div>
            </div>

            <div class="profile-card">
                <div class="card-label">Rol</div>
                <div class="card-value">@(ViewBag.Usuario.rol ? "Egresado" : "Estudiante")</div>
            </div>

            @if (ViewBag.Usuario.carrera != null)
            {
                <div class="profile-card">
                    <div class="card-label">Carrera</div>
                    <div class="card-value">@ViewBag.Usuario.carrera</div>
                </div>
            }
        </section>

        <!-- Action Button -->
        <div class="profile-actions">
            <button class="btn-logout"><a href='@Url.Action("Logout", "Ingreso")'>Cerrar sesión</a></button>
        </div>
    </main>

    <footer class="site-footer">
        <div class="footer-inner container">
            <div class="footer-col footer-links">
                <a href="#">Políticas de privacidad</a>
                <a href="#">Términos y condiciones</a>
                <a href="#">Ayuda</a>
                <p class="copyright">© 2025 UniMatch</p>
            </div>

            <div class="footer-col footer-center">
                <p class="madeby">"Hecho por<br>y para estudiantes"</p>
            </div>

            <div class="footer-col footer-social">
                <p class="redes-title">Redes</p>
                <div class="social-icons">
                    <a href="#" aria-label="Instagram"><img src="~/img/instagram.jpg" alt="Instagram"></a>
                    <a href="#" aria-label="X"><img src="~/x twitter.png" alt="X"></a>
                    <a href="#" aria-label="WhatsApp"><img src="~/whatsapp.png" alt="WhatsApp"></a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
